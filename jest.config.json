{
	"setupFiles": [
		"./lib/testUtils/testRule.js"
	],
	"clearMocks": true,
	"collectCoverage": false,
	"collectCoverageFrom": [
		"lib/**/*.js",
		"!lib/**/{__tests__,testUtils}/**/*.js"
	],
	"coverageDirectory": "./.coverage/",
	"coverageProvider": "v8",
	"coverageReporters": [
		"lcov",
		"text-summary"
	],
	"coverageThreshold": {
		"global": {
			"branches": 90,
			"functions": 90,
			"lines": 90,
			"statements": 90
		}
	},
	"testEnvironment": "node",
	"roots": [
		"lib"
	],
	"testRegex": ".*\\.test\\.js$|lib/.*/__tests__/.*\\.js$",
	"watchPlugins": [
		"jest-watch-typeahead/filename",
		"jest-watch-typeahead/testname"
	]
}
